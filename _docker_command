mkdir /myenv
echo '
C="\e[1;31m"
E="\e[0m"

echo -e "$C[DOCKER SETTING] :: apt update$E"
apt update
echo -e "$C[DOCKER SETTING] :: install git$E"
apt install -y git
echo -e "$C[DOCKER SETTING] :: clone git$E"
cd /myenv
git clone https://github.com/skyrich2000/env apply
cd ./apply
echo -e "$C[DOCKER SETTING] :: start docker setting$E"
./docker.sh
' > /myenv/install_my_env.sh
bash /myenv/install_my_env.sh
